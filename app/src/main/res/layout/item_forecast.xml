<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvForecastDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-10-04"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvForecastLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location Name"
                android:textSize="14sp"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/tvForecastLocationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 12345"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMaxTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Máx: 25°C"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/tvMinTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mín: 18°C"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sunny"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Humedad: 70%  |  Viento máx: 10.5 km/h"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>